%header.header
  .header-title
    .header-title-log
      = link_to root_path, method: :get do
        = image_tag 'logo.svg', height: '60px', width: '95px'

    %nav.header__left
      %ul.header-menu
        %li.header-menu__list
          = link_to 'ストーリー', root_path, class: 'header_link'
        %li.header-menu__list
          = link_to '企業', root_path, class: 'header_link'
        %li.header-menu__list#main-trigger
          = link_to 'トピック', root_path, class: 'header_link'
        %li.header-menu__list#contacts
          = link_to '資料請求/お問い合わせ', root_path, class: 'header_link'

    .header__right
      - if user_signed_in?
        .logout-button
          = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'logout-icon'
      - else
        .login-button
          = link_to 'ログイン / 新規登録', new_user_session_path, class: 'login-icon'
        .search
          %form.search__form
            .search__form-wrapper
              = fa_icon 'search 2x', class: 'search-icon'
              %input.search__form-input{class: 'hidden', style: 'display: none'}
            .search__form-results{class: 'hidden', style: 'display: none'}
              %h3
              %ul.search__form-results-menu
                %li.search_form-results-menu__list
                  / 検索結果を表示
              .search__form-results-submit
                %button ストーリーを検索

